{% extends 'base.html.twig' %}

{% block title %}Hello ActualiteController!
{% endblock %}

{% block body %}
	<div class="container-fluid offer pt-5">
		<div class="row px-xl-5">
			{% for actualites in actualites %}

				<div class="col-md-6 pb-4">
					<div class="position-relative bg-light text-center text-md-left text-white mb-2 py-5 px-5">
						<div class="position-relative" style="z-index: 1;">
							<h5 class="text-uppercase text-primary mb-3">{{ actualites.contenu|u.truncate(50,'...',false)}}</h5>
							<h1 class="mb-4 font-weight-semi-bold text-primary">{{ actualites.titre }}</h1>
							<p class="btn btn-outline-primary py-md-2 px-md-3">{{ actualites.date|date('d/m/y') }}</p>
						</div>
					</div>
				</div>

			{% endfor %}
		</div>
		<div class="d-flex justify-content-center">
			{% do actualites.setPageRange(2) %}
			{{ knp_pagination_render(actualites, 'base/pagination.html.twig') }}
		</div>
	</div>

{% endblock %}
