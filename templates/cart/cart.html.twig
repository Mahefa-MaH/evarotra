{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}

	<section class="bg-light p-3">
		<h1>Votre panier</h1>
	</section>

	<table class="table">
		<thead>
			<tr>
				<th>Articles</th>
				<th>Prix</th>
				<th>Quantit√©</th>
				<th>Total</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for element in dataPanier %}
				<tr>
					<td>{ {element.articles.nom} }</td>
					<td class="text-end">{ {element.articles.Prix} } Ar</td>
					<td>{ {element.quantite} }</td>
					<td class="text-end">{{ element.quantite * element.articles.Prix }}
						Ar</td>
					<td>
						<a href="{{path("cart_add", {id: element.articles.id})}}" class="btn btn-success">
							<i class="bi bi-cart-plus"></i>
						</a>
						<a href="{{path("cart_remove", {id: element.articles.id})}}" class="btn btn-warning">
							<i class="bi bi-cart-dash"></i>
						</a>
						<a href="{{path("cart_delete", {id: element.articles.id})}}" class="btn btn-danger">
							<i class="bi bi-cart-x"></i>
						</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5" class="text-center">Votre panier est vide</td>
				</tr>
			{% endfor %}
		</tbody>
		<tfoot>
			<tr>
				<td colspan="3">Total</td>
				<td class="text-end">
					{{ total }}
					Ar</td>
				<td>
					<a href={{path('delete_all')}} class="btn btn-danger">
						<i class="bi bi-cart-x"></i>
					</a>
				</td>
			</tr>
		</tfoot>
	</table>

{% endblock %}
